{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "composite": true,
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "baseUrl": ".",
        "lib": [
            "es2020"
        ],
        "rootDirs": [
            "./src"
        ],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}
